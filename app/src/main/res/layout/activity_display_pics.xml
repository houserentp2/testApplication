<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DisplayPicsActivity">

    <include layout="@layout/layout_boxing_app_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boxing_activity_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/single_image_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boxing_activity_horizontal_margin"
            android:layout_marginRight="@dimen/boxing_activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/rect_color_primary"
            android:gravity="center"
            android:padding="@dimen/boxing_item_spacing"
            android:text="@string/boxing_pick_single_image"
            android:textColor="@color/boxing_colorPrimaryDark"/>

        <TextView
            android:id="@+id/single_image_btn_crop_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boxing_activity_horizontal_margin"
            android:layout_marginRight="@dimen/boxing_activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/rect_color_primary"
            android:gravity="center"
            android:padding="@dimen/boxing_item_spacing"
            android:text="@string/boxing_pick_single_image_crop"
            android:textColor="@color/boxing_colorPrimaryDark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boxing_activity_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/multi_image_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boxing_activity_horizontal_margin"
            android:layout_marginRight="@dimen/boxing_activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/rect_color_primary"
            android:gravity="center"
            android:padding="@dimen/boxing_item_spacing"
            android:text="@string/boxing_pick_multi_image"
            android:textColor="@color/boxing_colorPrimaryDark"/>

        <TextView
            android:id="@+id/video_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boxing_activity_horizontal_margin"
            android:layout_marginRight="@dimen/boxing_activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/rect_color_primary"
            android:gravity="center"
            android:padding="@dimen/boxing_item_spacing"
            android:text="@string/boxing_pick_single_video"
            android:textColor="@color/boxing_colorPrimaryDark"/>

    </LinearLayout>

    <TextView
        android:id="@+id/outside_bs_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boxing_activity_horizontal_margin"
        android:layout_marginRight="@dimen/boxing_activity_horizontal_margin"
        android:layout_marginTop="@dimen/boxing_activity_vertical_margin"
        android:background="@drawable/rect_color_primary"
        android:gravity="center"
        android:padding="@dimen/boxing_item_spacing"
        android:text="@string/bottom_sheet"
        android:textColor="@color/boxing_colorPrimaryDark"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/media_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/boxing_item_spacing"
        android:layout_marginLeft="@dimen/boxing_activity_horizontal_margin"
        android:layout_marginRight="@dimen/boxing_activity_horizontal_margin"
        android:clickable="true"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>